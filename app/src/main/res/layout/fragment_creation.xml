<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    tools:context=".ui.home.creation.CreationFragment">
    <LinearLayout
        android:id="@+id/llNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="187dp"
            android:layout_height="128dp"
            android:src="@drawable/img_no_data"/>
        <TextView
            android:layout_width="match_parent"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/baloo2_edium"
            android:textColor="@color/black"
            android:text="@string/no_image_in_here"/>
        <LinearLayout
            android:id="@+id/llCreateNew"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:minWidth="200dp"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_create_new"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_round"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new"
                android:lines="1"
                android:includeFontPadding="false"
                android:fontFamily="@font/aeonik_pro_regular"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>